<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_categories"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CategoriesActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/layoutBackground"
        android:theme="@style/AppTheme">



        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="5dp"
            android:stretchColumns="1">

            <TableRow android:layout_marginTop="5dp">
                <TextView
                    android:text="Adult"
                    android:padding="3dip"
                    android:layout_marginLeft="10dp"
                    />
                <TextView
                    android:text="$3.50 CAD"
                    android:gravity="right"
                    android:padding="3dip" />

                <ImageButton
                    android:layout_width="59dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/plus"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="5dp"
                    android:id="@+id/adultPlus"
                    />

            </TableRow>


            <TableRow android:layout_marginTop="10dp">
                <TextView
                    android:text="Youth"
                    android:padding="3dip"
                    android:layout_marginLeft="10dp"
                    />
                <TextView
                    android:text="$3.00 CAD"
                    android:gravity="right"
                    android:padding="3dip" />

                <ImageButton
                    android:id="@+id/youthPlus"
                    android:layout_width="59dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/plus"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="5dp"
                    />

            </TableRow>

            <TableRow android:layout_marginTop="10dp">
                <TextView
                    android:text="Senior"
                    android:padding="3dip"
                    android:layout_marginLeft="10dp"
                    />
                <TextView
                    android:text="$2.35 CAD"
                    android:gravity="right"
                    android:padding="3dip" />

                <ImageButton
                    android:id="@+id/seniorPlus"
                    android:layout_width="59dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/plus"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="5dp"
                    />

            </TableRow>

            <TableRow android:layout_marginTop="10dp">
                <TextView
                    android:text="Child"
                    android:padding="3dip"
                    android:layout_marginLeft="10dp"
                    />
                <TextView
                    android:text="$2.35 CAD"
                    android:gravity="right"
                    android:padding="3dip" />

                <ImageButton
                    android:id="@+id/childPlus"
                    android:layout_width="59dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/plus"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="5dp"
                    />

            </TableRow>

            <TableRow android:layout_marginTop="10dp">
                <TextView
                    android:text="Express"
                    android:padding="3dip"
                    android:layout_marginLeft="10dp"
                    />
                <TextView
                    android:text="$4.25 CAD"
                    android:gravity="right"
                    android:padding="3dip" />

                <ImageButton
                    android:id="@+id/expressPlus"
                    android:layout_width="59dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/plus"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="5dp"
                    />

            </TableRow>

            <TableRow android:layout_marginTop="10dp">
                <TextView
                    android:text="NOV Adult Pass"
                    android:padding="3dip"
                    android:layout_marginLeft="10dp"
                    />
                <TextView
                    android:text="$150.00 CAD"
                    android:gravity="right"
                    android:padding="3dip" />

                <ImageButton
                    android:id="@+id/adultPassPlus"
                    android:layout_width="59dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/plus"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="5dp"
                    />

            </TableRow>

            <TableRow android:layout_marginTop="10dp">
                <TextView
                    android:text="NOV Youth Pass"
                    android:padding="3dip"
                    android:layout_marginLeft="10dp"
                    />
                <TextView
                    android:text="$117.00 CAD"
                    android:gravity="right"
                    android:padding="3dip" />

                <ImageButton
                    android:id="@+id/youthPassPlus"
                    android:layout_width="59dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/plus"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="5dp"
                    />

            </TableRow>

            <TableRow android:layout_marginTop="10dp">
                <TextView
                    android:text="NOV Senior Pass"
                    android:padding="3dip"
                    android:layout_marginLeft="10dp"
                    />
                <TextView
                    android:text="$63.00 CAD"
                    android:gravity="right"
                    android:padding="3dip" />

                <ImageButton
                    android:id="@+id/seniorPassPlus"
                    android:layout_width="59dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/plus"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="5dp"
                    />

            </TableRow>


            <TableRow android:layout_marginTop="10dp">
                <TextView
                    android:text="NOV Child Pass"
                    android:padding="3dip"
                    android:layout_marginLeft="10dp"
                    />
                <TextView
                    android:text="$63.00 CAD"
                    android:gravity="right"
                    android:padding="3dip" />

                <ImageButton
                    android:id="@+id/childPassPlus"
                    android:layout_width="59dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/plus"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="5dp"
                    />

            </TableRow>


            <TableRow android:layout_marginTop="10dp">
                <TextView
                    android:text="NOV Express Pass"
                    android:padding="3dip"
                    android:layout_marginLeft="10dp"
                    />
                <TextView
                    android:text="$171.00 CAD"
                    android:gravity="right"
                    android:padding="3dip" />

                <ImageButton
                    android:id="@+id/expressPassPlus"
                    android:layout_width="59dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/plus"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="5dp"
                    />

            </TableRow>



            <TableRow android:layout_marginTop="10dp">
                <TextView
                    android:text="Express Upgrade"
                    android:padding="3dip"
                    android:layout_marginLeft="10dp"
                    />
                <TextView
                    android:text="$0.50 CAD"
                    android:gravity="right"
                    android:padding="3dip" />

                <ImageButton
                    android:id="@+id/expressUpgradePlus"
                    android:layout_width="59dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/plus"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="5dp"
                    />

            </TableRow>







        </TableLayout>


    </RelativeLayout>


    <android.support.design.widget.NavigationView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        app:menu="@menu/menu"
        android:layout_gravity="start"
        app:headerLayout="@layout/nav_header"
        android:id="@+id/nv">

    </android.support.design.widget.NavigationView>



</android.support.v4.widget.DrawerLayout>