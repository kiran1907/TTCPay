<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_buy_pass"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BuyPassActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/layoutBackground"
        android:theme="@style/AppTheme">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|center_vertical"
            android:layout_marginLeft="80dp"
            android:layout_marginTop="20dp"
            android:text="Buy Pass Screen!"
            android:textColor="@color/black"
            android:textSize="24dp"
            android:textStyle="bold" />

    </RelativeLayout>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="50dp"
        android:stretchColumns="1">

        <TableRow android:layout_marginTop="55dp">

            <Button
                android:id="@+id/buyAdultPassBtn"
                android:layout_width="299dp"
                android:layout_height="38dp"
                android:layout_marginLeft="50dp"
                android:background="@color/red"
                android:onClick="openPassCategory"
                android:text="Buy Adult Pass"
                android:textColor="@color/white"
                android:textSize="13dp" />
        </TableRow>
        <TableRow android:layout_marginTop="15dp">

            <Button
                android:id="@+id/buyStudentPassBtn"
                android:layout_width="299dp"
                android:layout_height="38dp"
                android:layout_marginLeft="50dp"
                android:background="@color/red2"
                android:onClick="openPassCategory"
                android:text="Buy Student Pass"
                android:textColor="@color/white"
                android:textSize="13dp" />

        </TableRow>
        <TableRow android:layout_marginTop="15dp">

            <Button
                android:id="@+id/buySeniorPassBtn"
                android:layout_width="299dp"
                android:layout_height="38dp"
                android:layout_marginLeft="50dp"
                android:background="@color/red3"
                android:onClick="openPassCategory"
                android:text="Buy Senior Pass"
                android:textColor="@color/white"
                android:textSize="13dp" />

        </TableRow>
    </TableLayout>
    <android.support.design.widget.NavigationView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        app:menu="@menu/menu"
        android:layout_gravity="start"
        app:headerLayout="@layout/nav_header"
        android:id="@+id/nv">

    </android.support.design.widget.NavigationView>




</android.support.v4.widget.DrawerLayout>