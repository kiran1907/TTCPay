<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
xmlns:app="http://schemas.android.com/apk/res-auto"
android:id="@+id/activity_main"
android:layout_width="match_parent"
android:layout_height="match_parent"
tools:context=".MainActivity">

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/layoutBackground"
    android:theme="@style/AppTheme">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal|center_vertical"
        android:layout_marginLeft="80dp"
        android:layout_marginTop="20dp"
        android:text="Welcome UserName!"
        android:textColor="@color/black"
        android:textSize="24dp"
        android:textStyle="bold" />



    <Button android:layout_width="299dp"
        android:layout_height="38dp"
        android:layout_marginTop="100dp"
        android:layout_marginLeft="50dp"
        android:text="Buy Ticket"
        android:id="@+id/buyTicketBtn"
        android:onClick="chooseOptionClick"
        android:textColor="@color/white"
        android:textSize="13dp"
        android:background="@color/red" />


    <Button android:layout_width="299dp"
        android:layout_height="38dp"
        android:layout_marginTop="170dp"
        android:layout_marginLeft="50dp"
        android:text="Buy Pass"
        android:id="@+id/buyPassBtn"
        android:onClick="chooseOptionClick"
        android:textColor="@color/white"
        android:textSize="13dp"
        android:background="@color/darkgrey" />


    <Button android:layout_width="299dp"
        android:layout_height="38dp"
        android:layout_marginTop="240dp"
        android:layout_marginLeft="50dp"
        android:text="Available Ticket"
        android:id="@+id/availTicketBtn"
        android:onClick="chooseOptionClick"
        android:textColor="@color/white"
        android:textSize="13dp"
        android:background="@color/red" />

    <Button android:layout_width="299dp"
        android:layout_height="38dp"
        android:layout_marginTop="310dp"
        android:layout_marginLeft="50dp"
        android:text="Available Passes"
        android:id="@+id/availPassBtn"
        android:onClick="chooseOptionClick"
        android:textColor="@color/white"
        android:textSize="13dp"
        android:background="@color/darkgrey" />



</RelativeLayout>

<android.support.design.widget.NavigationView
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    app:menu="@menu/menu"
    android:layout_gravity="start"
    app:headerLayout="@layout/nav_header"
    android:id="@+id/nv">

</android.support.design.widget.NavigationView>



</android.support.v4.widget.DrawerLayout>